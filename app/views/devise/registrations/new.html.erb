<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

         <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

       <div class="field">
        <%= f.label :nickname %> <em>(6 characters maximum)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
      </div>

        <div class="field">
          <%= f.label :user_email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :user_password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :user_password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :user_name, "ユーザー名" %><br />
          <%= f.text_field :hoge, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :user_profile, "プロフィール" %><br />
          <%= f.text_area :user_profile, class: :form__text, id:"user_profile" %>
        </div>

        <div class="field">
          <%= f.label :user_occupation, "所属" %><br />
          <%= f.text_area :user_occupation, class: :form__text, id:"user_occupation" %>
        </div>

        <div class="field">
          <%= f.label :user_position, "役職" %><br />
          <%= f.text_area :user_position, class: :form__text, id:"user_position" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>